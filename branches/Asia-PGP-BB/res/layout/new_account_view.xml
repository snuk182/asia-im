<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:padding="4dip">
		<TextView android:text="@string/label_account_type"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<Spinner android:id="@+id/newaccountprotocolchooser"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<!-- TextView android:text="@string/label_account_id" android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/> <EditText android:id="@+id/newaccountid" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"/> 
			<TextView android:text="@string/label_account_password" android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/> <EditText android:id="@+id/newaccountpw" 
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textPassword"/ -->
		<LinearLayout android:id="@+id/custom_options_layout"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" />
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<Button android:id="@+id/newaccountokbutton" android:text="@string/label_create"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="50" />
			<Button android:id="@+id/newaccountcancelbutton" android:text="@string/label_cancel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="50" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>
