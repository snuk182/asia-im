<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="ua.snuk182.asia" android:versionCode="1" android:versionName="@string/version">
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
	<application android:icon="@drawable/logo_96px" android:label="@string/app_name">
		<activity android:name=".EntryPoint" 
			android:multiprocess="false"
			android:label="@string/app_name" 
			android:launchMode="singleInstance" 
			android:theme="@android:style/Theme.Translucent.NoTitleBar"
			android:configChanges="orientation|keyboardHidden"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<service android:name=".services.RuntimeService" android:process="ua.snuk182.asia.runtime" >
			<intent-filter>
				<action android:name="ua.snuk182.asia.services.RuntimeService" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</service>
		<activity android:name=".view.more.PreferencesView"
			android:screenOrientation="behind"
			android:configChanges="orientation|keyboardHidden">
		</activity>
		<uses-library android:name="android.test.runner"/>
	</application>
	<uses-sdk android:minSdkVersion="4"></uses-sdk>
	
	<instrumentation android:name="android.test.InstrumentationTestRunner"
                     android:targetPackage="ua.snuk182.asia"
                     android:label="Tests for ua.snuk182.asia"/>
	
	<supports-screens android:largeScreens="true"
		android:normalScreens="true" android:smallScreens="true"
		android:anyDensity="true" />
</manifest> 