<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/cl_layout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">

	<FrameLayout android:id="@+id/bottompanel"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/statuspanel"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="horizontal" 
			android:gravity="left|center_vertical"
			>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<!--LinearLayout android:id="@+id/hdivider" android:layout_width="fill_parent" android:layout_height="3dip" android:background="#c4000000"/ -->
				<LinearLayout android:id="@+id/bottomleftpanel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<ImageView android:layout_width="32dip"
						android:layout_height="32dip" 
						android:scaleType="fitCenter"
						android:id="@+id/ownericon"
						android:padding="2dip" />
					<ImageView android:layout_width="32dip"
						android:layout_height="32dip" 
						android:scaleType="fitCenter" 
						android:id="@+id/statusicon"
						android:padding="2dip" />
					<ImageView android:layout_width="32dip"
						android:layout_height="32dip" 
						android:scaleType="fitCenter"
						android:id="@+id/xstatusicon"
						android:padding="2dip" />
					<!--LinearLayout android:id="@+id/vdivider" android:layout_height="fill_parent" android:layout_width="3dip" android:background="#c4000000"/ -->
				</LinearLayout>
			</LinearLayout>
			<ua.snuk182.asia.view.more.StatusTextView 
				android:textColor="#ffff"
				android:id="@+id/statusText" android:text="" 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" 
				android:gravity="bottom|right"/>
		</LinearLayout>
		<ProgressBar android:id="@+id/progressbar"
			android:layout_width="fill_parent" 
			android:layout_height="20dip"
			android:padding="5dip"
			android:indeterminateOnly="false" 
			android:progressDrawable="@android:drawable/progress_horizontal"
			android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal" 
			android:visibility="gone"/>
	</FrameLayout>
</merge>
